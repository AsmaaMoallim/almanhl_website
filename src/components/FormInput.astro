---
export interface Props {
  input_type: string;
  required?: string;
  placeholder: string;
  id: string;
  className: string;
  name: string;
}

const { input_type, required, placeholder, id, className, name } = Astro.props;
---

<input
  type={input_type}
  required={required}
  placeholder={placeholder}
  id={id}
  class={className}
  name={name}
/>

<style>
  .form-control { 
    width: 100%;
    height: 4rem;
    border-radius: 10px;
    border: none;
    background-color: var(--stark);
    margin: 0.5rem;
    padding: 1rem;
    outline: none;
    color: var(--void) !important;
  }
  .form-control_2 {
    width: 100%;
    height: 2.5rem;
    border-radius: 6px;
    border: none;
    background-color: var(--stark);
    margin: 0.5rem 0 ;
    padding: 1rem;
    outline: none;
    color: var(--void) !important;
  }
</style>
