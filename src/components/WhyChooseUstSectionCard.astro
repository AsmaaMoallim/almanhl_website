---
export interface Props {
  icon: string;
  title: string;
  content: string;
}

const { icon, title, content } = Astro.props;
---


<div class="WhyChooseUstSectionCard hidden">
  <div class="card_icon"><img src={`images/wc_icon${icon}.png`} /></div>
  <div class="card_title"><h3>{title}</h3></div>
  <div class="card_content">{content}</div>
</div>

<style>
  .WhyChooseUstSectionCard {
    width: 350px;
    height: 350px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 0.8rem;
    transform: translatey(20px);
    opacity: 0;
    /* background-color: var(--stark); */
    padding: 0 1rem;
    box-shadow: 0 3px 20px rgb(0 0 0 / 0.2);
  }
  /* .WhyChooseUstSectionCardAnimate {
    animation: floatUp 0.8s linear forwards;
  } */
  /* .animate {
    animation: floatUp 0.8s linear forwards;
  } */
  .card_icon {
    width: 50px;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
    border: solid white 2px;
    border-radius: 100%;
    font-size: larger;
    margin: 0 auto 0.5rem;
  }
  .card_title h3 {
    margin: 0%;
    color: var(--void) !important;
  }
  .card_content {
    margin: 10px;
    color: var(--void) !important;
  }
/* 
  @keyframes floatUp {
    0% {
      transform: translatey(30px);
      opacity: 0;
    }
    100% {
      transform: translatey(0px);
      opacity: 1;
    }
  } */

  .WhyChooseUstSectionCard:nth-child(1) {
    animation-delay: 0s;
  }
  .WhyChooseUstSectionCard:nth-child(2) {
    animation-delay: 0.2s;
  }
  .WhyChooseUstSectionCard:nth-child(3) {
    animation-delay: 0.4s;
  }
</style>
